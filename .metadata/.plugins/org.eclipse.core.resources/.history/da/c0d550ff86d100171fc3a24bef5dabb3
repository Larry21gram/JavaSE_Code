package Homework;
 
/*
 * 打印菱形星星
 * *
 * **
 * ***
 * ****
 */
public class Print_Stars {
	public static void main(String[] args) {
		int x = 5 ;
		print(5);
	}
// 打印菱形星星  x 为最大宽度 
	public static void print(int  x ) {
		for (int i = 0; i < 2*x - 1; i++) {
			if (i < x  ) {
				for (int j = 0; j <= i; j++) {
					System.out.print("*");
				}
			}
			else {
				for (int j = i - x - 1 ; j <= x; j++) {
					System.out.print("*");
				}
			}
			System.out.println();
		}
	}
}
