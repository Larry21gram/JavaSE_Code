package Notes;

import java.util.Scanner;

/*
	 * switch 语句
	 * key：条件 、 value ： 条件的值 、 default ： case都不满足时执行 、 break 遇到时跳出当前程序。
	 * 	switch (key) {
		case value:
			
			break;

		default:
			break;
		}
	 */
public class About_switch {
	public static void main(String[] args) {
		int rank = 2 ;
		switch (rank) {
		case 1:
			System.out.println("参加麻省理工大学夏令营");
			break;
		case 2:
			System.out.println("笔记本电脑一台");
			break;
		case 3:
			System.out.println("移动硬盘一个");
			break;
		default:
			System.out.println("淘汰出局");
			break;
		}
		
		Scanner input = new Scanner(System.in);
		System.out.println("请输入数字：");
		int n = input.nextInt();
		switch(n) {
		case 2 :
			//如果case 与 switch后括号中的内容相等时 ，执行下面语句
			System.out.println("是的，是2 。");
			break;		
		case 3: 
			System.out.println("是3");
			break;
		default:
			System.out.println("你逗我呢！");
			break ;
		}
		int grade = input.nextInt();
		switch (grade) {
		case 1:
			System.out.println("参加麻省理工大学夏令营");
			break;
		case 2 :
			System.out.println("奖励惠普笔记本一台 ");
			break;
		case 3 :
			System.out.println("奖励移动硬盘一个");
		default:
			System.out.println("啥也不说了，你走吧！！！");
			break;
		}h
	}
}
