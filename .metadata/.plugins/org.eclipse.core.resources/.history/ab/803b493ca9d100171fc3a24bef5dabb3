package Homework;

import java.util.Scanner;

/*
 * 今天作业:
在main方法中定义三个变量:账号，密码，用户昵称

账号密码用int类型即可

1.提示用户输入账号，账号正确后提示输入密码，若错误提示账号不正确请重新输入

2.用户输入密码后匹配密码是否正确，若正确提示:欢迎xxx登录系统
不正确则提示重新输入

 */
public class Login {
	public static void main(String[] args) {
		// 用户
		Pass p = Pass.getPass();
		 p.setPW (p);
		 System.out.println("请登录：");
		 Pw.check(p);
	}
}

//原密码：
class Pass{	
	// 密码
	private int num ;
	//昵称
	private String name ;
	// 帐号
	private int accounts ;
	
	private  Pass() {
		super();
	}
	
	private Pass(int num) {
		super();
		this.num = num;
	}
	public static Pass getPass() {
		Pass p = new Pass();
		return p;
	}
	
	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public int getAccounts() {
		return accounts;
	}

	public void setAccounts(int accounts) {
		this.accounts = accounts;
	}


	public int getNum() {
		return num;
	}

	public void setNum(int num) {
		this.num = num;
	}
//	设置密码 及用户设置
	public void setPW(  Pass p) {
		Scanner input = new Scanner(System.in);
		System.out.println("请设置昵称：");
		p.setName(input.next());
		System.out.println("请设置密码：");
		int pw = input.nextInt();
		System.out.println("请再次输入密码：");
		if (pw == input.nextInt()) {
			p.setNum(pw);
			System.out.println("设置成功");
			p.setAccounts((int)(Math.random() * 100000000));
			System.out.println("您的帐号为：" + p.getAccounts());
		}
		else {
			System.out.println("两次输入密码不同！");
			p.setPW(p);
		}
	}
}

class Pw{
	
	//初次设置用户
	public static Pass setP() {
		// 用户
		Scanner input = new Scanner (System.in);
		Pass p = Pass.getPass();
		System.out.println("请设置昵称：");
		p.setName(input.next());
		p.setPW(p);
		return p ;
	} 
	
	// 检查密码及用户
	public static void check (Pass p ) {
		Scanner input = new Scanner (System.in); 
		System.out.println("请输入昵称：");
		String str = input.next();
		System.out.println("请输入账户：");
		if (p.getAccounts() == input.nextInt() && p.getName() == str) {
			System.out.println("请输入密码：");
			if (p.getNum() == input.nextInt()) {
				System.out.println("登录成功！！！\n 欢迎来到 逸飞系统！！！");
			}
			else {
				System.out.println("密码错误！！！");
				check(p);
			}
		}
		else {
			System.out.println("昵称或帐号错误！！！");
			check(p);
		}
	}
}