package About_Arrays;

import java.util.Arrays;
import java.util.Scanner;

/*
 * 数组的声明：
 * 元素类型  [] 数组名 = new 元素类型[] { 元素 1 ， 元素2 ，。。。};
 * 元素类型 [] 数组名 = new 元素类型[数组长度] ;
 */
public class About_Arrays {
	public static void main(String[] args) {
		int [] score = {98, 99 , 97 , 80}; 
		/*
		 * score为标识符 ，即数组名
		 * int表示数组装的元素类型
		 * int[] 表示数组类型
		 * {} 中的内容就是数组内容
		 *  98 ，表示一个元素。
		 */
		// 下标：即数组中元素的索引 （从零开始 ）。
		// 使用下标表示元素 ，如第一个元素 score[0]; 最后一个元素小标为长度减1
		// System.out.println(score[0]);
		
		Scanner input = new Scanner (System.in);
		 System.out.println("请输入数字：");
		 int [] arr = new int [10];
		 for (int i = 0; i < arr.length; i++) {
			 System.out.println("请输入第" + (i + 1) + "个数：");
			arr[i] = input.nextInt();
		}
		 System.out.println("您输入的数组为：" + Arrays.toString(arr));
		 
		 //下一句 异常：java.lang.ArrayIndexOutOfBoundsException 数组越界异常
		 // arr[11] = 10 ;
		 
		 // 对数组进行排序
		 Arrays.sort(score);
		 System.out.println(Arrays.toString(score));
	}
}
